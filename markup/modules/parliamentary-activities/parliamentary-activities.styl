.parliamentary-activities
	&__title
		margin-bottom 15px
		font-family $ubuntu-reg
		font-size 30px
		font-weight normal
		color #1b3d76
		text-align center
		&_style-2
			margin-left -55px
			margin-bottom 4px
			font-family $ubuntu-med
		&_style-3
			margin-bottom 5px
			margin-left -36px
	&__list
		font-size 0
		clearfix()
	&__item
		margin-right 38px
		width 300px
		display inline-block
		vertical-align top
		&:nth-child(3n)
			margin-right 0
	&__item-link
		display block
		text-decoration none
	&__item-image
		margin-bottom 20px
		display block
		width 296px
		height 224px
		img
			display block
			max-width 100%
			height auto
	&__item-title
		margin-bottom 8px
		font-family $ubuntu-med
		font-size 20px
		font-weight normal
		text-align center
		color #1b3d76

	&__item-text
		font-size 16px
		color #010101
		line-height 19px
	&__item-link
		&:hover
			.parliamentary-activities__item-title
				text-decoration underline

	&__text
		margin-bottom 10px
		line-height 24px
		color #020202
	&__text_style-2
		margin-bottom 26px
		line-height 26px

	&__table
		border 1px solid rgba(0, 0, 0, 0.07)
		background-color #faf9f9
	&__table-head
		.parliamentary-activities__table-cell
			padding-top 5px
			padding-left 16px
			padding-bottom 5px
			height 38px
			background-color #0369b1
			font-size 14px
			line-height 14px
			color white
			&:nth-child(2)
				padding-left 22px
	&__table-head_style-2
		.parliamentary-activities__table-cell
			border-left 1px solid #035a98
			text-align center
			&:nth-child(1)
				padding-left 0
				padding-right 0
				text-align center
			&:nth-child(2)
				padding-left 0
				padding-right 0
	// &__table-row

	&__table-cell

		font-family $ubuntu-reg
		font-weight normal
		line-height 18px
		color black

	&__table-body
		.parliamentary-activities__table-row
			&:nth-child(2n)
				background #FFF
		.parliamentary-activities__table-cell
			padding-top 10px
			padding-left 22px
			padding-right 30px
			padding-bottom 10px
			&:nth-child(2)
				padding-left 0
				padding-right 25px
	&__table-body_style-2
		// .parliamentary-activities__table-row
		// 	.parliamentary-activities__table-cell
		// 		&:nth-child(1)
		// 			width 60px
		.parliamentary-activities__table-cell
			padding-left 16px
			padding-right 20px
			border-left 1px solid #d7d6d6
			&:nth-child(1)
				padding-left 0
				padding-right 0
				width 60px
				text-align center
			&:nth-child(2)
				padding-right 0
				width 130px
				text-align center
			&:nth-child(3)
				width 250px
			&:nth-child(4)
				width 270px
			&:nth-child(5)
				width 270px
.article
	margin-bottom 35px
	clearfix()
	&__title
		margin-bottom 12px
		font-family $ubuntu-reg
		font-size 22px
		font-weight normal
		line-height 28px
		color #020202
	&__date
		margin-bottom 6px
		font-size 0
		color #d1d0d0
		span
			display inline-block
			vertical-align top
			font-size 14px
	&__date-icon
		display inline-block
		vertical-align top
		bg($date-icon)
	&__text
		margin-bottom 18px
		font-size 16px
		line-height 20px
		color black
	&__image
		border 1px solid rgba(0, 0, 0, 0.13)
		margin-right 25px
		float left
		size 250px 220px
		background #f9f7f7 url('../images/general/image-placeholder.png') 50% no-repeat
		img
			display block
			max-width 100%
			height auto
	&__more
		text-align right
		a
			font-family $ubuntu-reg
			font-size 16px
			font-weight normal
			line-height 20px
			text-decoration underline
			color #3d92d9
			&:hover
				text-decoration none





